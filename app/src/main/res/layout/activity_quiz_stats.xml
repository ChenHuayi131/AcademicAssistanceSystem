<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comp3350.AAS.presentation.SelectQuizActivity">

    <!-- The name of quiz list-->

    <TextView
        android:id="@+id/lowest_grade"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="326dp"
        android:layout_marginBottom="149dp"
        android:textSize="34sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:background="#3F51B5"
        android:text=" Completed Quizzes"
        android:textColor="#000000"
        android:textSize="34sp" />

    <ListView
        android:id="@+id/quizListView"
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/average_grade_text"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="290dp"
        android:text="@string/average_grade"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/completed_quizzes_text"
        android:layout_width="475dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="360dp"
        android:text="@string/completed_quizzes"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/lowest_grade_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="150dp"
        android:text="@string/lowest_grade"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/highest_grade_text"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="220dp"
        android:text="@string/highest_grade"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/average_grade"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="335dp"
        android:layout_marginBottom="289dp"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/completed_quizzes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="498dp"
        android:layout_marginBottom="359dp"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/highest_grade"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="335dp"
        android:layout_marginBottom="219dp"
        android:textSize="34sp" />

</RelativeLayout>