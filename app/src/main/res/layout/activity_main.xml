<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:context="comp3350.AAS.presentation.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="69dp"
        android:background="#453F3F"
        android:gravity="center"
        android:scaleX="0.9"
        android:text="@string/academic_assistance_system"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button1"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="207dp"
        android:background="#453F3F"
        android:backgroundTint="#453F3F"
        android:gravity="center"
        android:scaleX="0.687"
        android:scaleY="0.8"
        android:text="@string/flash_cards"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="288dp"
        android:backgroundTint="#453F3F"
        android:gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.9"
        android:text="@string/create_quizzes"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="366dp"
        android:backgroundTint="#453F3F"
        android:gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.9"
        android:text="@string/start_quizzes"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Button4"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="-1dp"
        android:backgroundTint="#453F3F"
        android:gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.9"
        android:text="@string/view_stats"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>