<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MakeTfQuizActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#D32401"
        android:gravity="center"
        android:text="create a True or False question"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/TFQuestion"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="#453F3F"
        android:ems="10"
        android:foregroundTint="#000000"
        android:hint="@string/type_your_question"
        android:inputType="textPersonName"
        android:scaleY="1.25"
        android:textColor="#000000"
        android:textColorHint="#989898" />

    <RadioGroup
        android:id="@+id/makeTFQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginStart="60dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/True"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="True"
            android:textSize="30sp"
            />

        <RadioButton
            android:id="@+id/False"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="False"
            android:textSize="30sp"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/you_will_send_this_question_above_to_the_quiz_list_by_given_quiz_name_below"
        android:textColor="#000000"
        android:textSize="25sp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/quiz_belong"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:backgroundTint="#453F3F"
        android:ems="10"
        android:foregroundTint="#000000"
        android:hint="@string/quiz_name_eg_quiz1_quiz2"
        android:inputType="textPersonName"
        android:scaleY="1.25"
        android:textColor="#000000"
        android:textColorHint="#989898" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_Btn"
        android:layout_width="601dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="680dp"
        android:layout_marginEnd="-1dp"
        android:backgroundTint="#FFC107"
        android:gravity="center"
        android:scaleX="0.75"
        android:scaleY="0.9"
        android:text="@string/submit"
        android:textColor="#000000"
        android:textSize="30sp" />


</RelativeLayout>